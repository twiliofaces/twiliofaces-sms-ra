<?xml version="1.0" encoding="UTF-8"?>
<connector xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
           http://java.sun.com/xml/ns/javaee/connector_1_6.xsd"
	version="1.6">
	<description>Resource adapter for twilio sms listener</description>
	<display-name>TWILIO SMS listener</display-name>
	<vendor-name>twiliofaces.org</vendor-name>
	<eis-type>twiliosms</eis-type>
	<resourceadapter-version>1.0</resourceadapter-version>
	<resourceadapter>
		<resourceadapter-class>org.twiliofaces.smsra.SMSResourceAdapter</resourceadapter-class>
		<inbound-resourceadapter>
			<messageadapter>
				<messagelistener>
					<messagelistener-type>javax.jms.MessageListener</messagelistener-type>
					<activationspec>
						<activationspec-class>org.twiliofaces.smsra.SMSActivationSpec</activationspec-class>
					</activationspec>
				</messagelistener>
			</messageadapter>
		</inbound-resourceadapter>
	</resourceadapter>
</connector>